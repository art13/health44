<%= form_for letter, :remote => true, :html => {:class => "form-horizontal" } do |f| %>

	<div class="control-group">
		<%= f.label :sender_name, t(:sender_name), :class => "control-label" %>
		<div class="controls">
			<%= f.text_field :sender_name %>
		</div>
	</div>

	<div class="control-group">
		<%= f.label :sender_age, t(:sender_age), :class => "control-label" %>
		<div class="controls">
			<%= f.number_field :sender_age %>
		</div>
	</div>

	<div class="control-group">
		<%= f.label :sender_email, t(:sender_email), :class => "control-label" %>
		<div class="controls">
			<%= f.email_field :sender_email %>
		</div>
	</div>

	<div class="control-group">
		<%= f.label :body, t(:body), :class => "control-label" %>
		<div class="controls">
			<%= f.text_area :body, :rows => 8, :cols => 50, :required => true %>
		</div>
	</div>

	<div id="message"></div>
	
<% end %>